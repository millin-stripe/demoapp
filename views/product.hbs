<script>
  let addToCartBtn = document.getElementById('add-to-cart-btn');
  let productId = addToCartBtn.dataset.productId;

  addToCartBtn.addEventListener("click", function(e) {
    // ==========================================================================
    // Begin old cart implementation
    // ==========================================================================
    let itemToAdd = {
      id: '{{ price.product.id }}',
      images: ['{{ price.product.images }}'],
      name: '{{ price.product.name }}',
      quantity: 1,
      price: {
        id: '{{ price.id }}',
        unit_amount: {{ price.unit_amount }},
        currency: '{{ price.currency }}'
      }
    }

    var cart = JSON.parse(sessionStorage.getItem('cart'))

    if (!cart) {
      // Cart is empty so init a new cart and save it in sessionStorage
      var newCart = {};
      newCart[productId] = itemToAdd;
      sessionStorage.setItem('cart', JSON.stringify(newCart));
    } else {
      if (cart.hasOwnProperty(productId)) {
        // Cart is NOT empty and product is already in cart so increment quantity
        cart[productId].quantity += 1;
        sessionStorage.setItem('cart', JSON.stringify(cart));
      } else {
        // Cart is NOT empty and product is NOT already in cart so add it to the cart
        cart[productId] = itemToAdd;
        sessionStorage.setItem('cart', JSON.stringify(cart));
      }
    }

    window.location.href = '/cart';
  })

</script>
