{{> demo_notice message='This is a demo of global payments with Stripe. Learn more at <a href="https://stripe.com" class="text-blurple">stripe.com/payments</a>.'}}

<div class="bg-white">
  <!-- Hero section -->
  <div class="relative bg-gray-900">
    <!-- Decorative image and overlay -->
    <div aria-hidden="true" class="absolute inset-0 overflow-hidden">
      {{#with (demoConfig)}}
      <img src="{{ pages.index.hero.image }}" alt="" class="w-full h-full object-center object-cover">
      {{/with}}
    </div>
    <div aria-hidden="true" class="absolute inset-0 bg-gray-900 opacity-50"></div>

    {{> header}}

    <div class="relative max-w-4xl mx-auto py-32 px-6 flex flex-col items-center text-center sm:py-64 lg:px-0">
      {{#with (demoConfig)}}
      <h1 class="text-4xl font-extrabold tracking-tight text-white lg:text-6xl">{{pages.index.hero.text}}</h1>
      <p class="mt-4 text-xl text-white">{{pages.index.hero.lead}}</p>
        <a href="/products" data-accent-color-btn class="mt-8 inline-block bg-accent-color border border-transparent rounded-md py-3 px-8 text-base font-medium text-gray-900 hover:opacity-80">{{ pages.index.hero.cta }}</a>
      {{/with}}
    </div>
  </div>

  <main>
    <!-- Category section -->
    {{#with (demoConfig)}}
    {{#if pages.index.categories.show}}
    <section aria-labelledby="category-heading" class="pt-24 sm:pt-32 xl:max-w-7xl xl:mx-auto xl:px-8">
      <div class="px-4 sm:px-6 sm:flex sm:items-center sm:justify-between lg:px-8 xl:px-0">
        <h2 id="category-heading" class="text-2xl font-extrabold tracking-tight text-gray-900">Browse by Category</h2>

        <a href="/products" class="hidden text-sm font-semibold text-text-gray-700 hover:underline sm:block">Browse all products<span aria-hidden="true"> &rarr;</span></a>
      </div>

      <div class="mt-4 flow-root">
        <div class="-my-2">
          <div class="box-content py-2 relative h-80 overflow-x-auto xl:overflow-visible">
            <div class="absolute min-w-screen-xl px-4 flex space-x-8 sm:px-6 lg:px-8 xl:relative xl:px-0 xl:space-x-0 xl:grid xl:grid-cols-5 xl:gap-x-8">
              <a href="/products" class="relative w-56 h-80 rounded-lg p-6 flex flex-col overflow-hidden hover:opacity-75 xl:w-auto">
                <span aria-hidden="true" class="absolute inset-0">
                  <img src="{{pages.index.categories.1.image}}" alt="" class="w-full h-full object-center object-cover">
                </span>
                <span aria-hidden="true" class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-gray-800 opacity-50"></span>
                <span class="relative mt-auto text-center text-xl font-bold text-white">{{pages.index.categories.1.text}}</span>
              </a>

              <a href="/products" class="relative w-56 h-80 rounded-lg p-6 flex flex-col overflow-hidden hover:opacity-75 xl:w-auto">
                <span aria-hidden="true" class="absolute inset-0">
                  <img src="{{pages.index.categories.2.image}}" alt="" class="w-full h-full object-center object-cover">
                </span>
                <span aria-hidden="true" class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-gray-800 opacity-50"></span>
                <span class="relative mt-auto text-center text-xl font-bold text-white">{{pages.index.categories.2.text}}</span>
              </a>

              <a href="/products" class="relative w-56 h-80 rounded-lg p-6 flex flex-col overflow-hidden hover:opacity-75 xl:w-auto">
                <span aria-hidden="true" class="absolute inset-0">
                  <img src="{{pages.index.categories.3.image}}" alt="" class="w-full h-full object-center object-cover">
                </span>
                <span aria-hidden="true" class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-gray-800 opacity-50"></span>
                <span class="relative mt-auto text-center text-xl font-bold text-white">{{pages.index.categories.3.text}}</span>
              </a>

              <a href="/products" class="relative w-56 h-80 rounded-lg p-6 flex flex-col overflow-hidden hover:opacity-75 xl:w-auto">
                <span aria-hidden="true" class="absolute inset-0">
                  <img src="{{pages.index.categories.4.image}}" alt="" class="w-full h-full object-center object-cover">
                </span>
                <span aria-hidden="true" class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-gray-800 opacity-50"></span>
                <span class="relative mt-auto text-center text-xl font-bold text-white">{{pages.index.categories.4.text}}</span>
              </a>

              <a href="/products" class="relative w-56 h-80 rounded-lg p-6 flex flex-col overflow-hidden hover:opacity-75 xl:w-auto">
                <span aria-hidden="true" class="absolute inset-0">
                  <img src="{{pages.index.categories.5.image}}" alt="" class="w-full h-full object-center object-cover">
                </span>
                <span aria-hidden="true" class="absolute inset-x-0 bottom-0 h-2/3 bg-gradient-to-t from-gray-800 opacity-50"></span>
                <span class="relative mt-auto text-center text-xl font-bold text-white">{{pages.index.categories.5.text}}</span>
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-6 px-4 sm:hidden">
        <a href="#" class="block text-sm font-semibold text-accent-color hover:text-brand-color">Browse all categories<span aria-hidden="true"> &rarr;</span></a>
      </div>
    </section>
    {{/if}}

    <!-- Collection section -->
    {{#if pages.index.collections.show}}
    <section aria-labelledby="collection-heading" class="max-w-xl mx-auto pt-24 px-4 sm:pt-32 sm:px-6 lg:max-w-7xl lg:px-8">
      <h2 id="collection-heading" class="text-2xl font-extrabold tracking-tight text-gray-900">Browse by Collection</h2>

      <div class="mt-4 space-y-12 lg:space-y-0 lg:grid lg:grid-cols-3 lg:gap-x-8">
        <a href="/products" class="group block">
          <div aria-hidden="true" class="aspect-w-3 aspect-h-2 rounded-lg overflow-hidden group-hover:opacity-75 lg:aspect-w-5 lg:aspect-h-6">
            <img src="{{pages.index.collections.1.image}}" alt="Brown leather key ring with brass metal loops and rivets on wood table." class="w-full h-full object-center object-cover">
          </div>
          <h3 class="mt-4 text-base font-semibold text-gray-900">{{pages.index.collections.1.text}}</h3>
          <p class="mt-2 text-sm text-gray-500">{{pages.index.collections.1.lead}}</p>
        </a>

        <a href="/products" class="group block">
          <div aria-hidden="true" class="aspect-w-3 aspect-h-2 rounded-lg overflow-hidden group-hover:opacity-75 lg:aspect-w-5 lg:aspect-h-6">
            <img src="{{pages.index.collections.2.image}}" alt="Natural leather mouse pad on white desk next to porcelain mug and keyboard." class="w-full h-full object-center object-cover">
          </div>
          <h3 class="mt-4 text-base font-semibold text-gray-900">{{pages.index.collections.2.text}}</h3>
          <p class="mt-2 text-sm text-gray-500">{{pages.index.collections.2.lead}}</p>
        </a>

        <a href="/products" class="group block">
          <div aria-hidden="true" class="aspect-w-3 aspect-h-2 rounded-lg overflow-hidden group-hover:opacity-75 lg:aspect-w-5 lg:aspect-h-6">
            <img src="{{pages.index.collections.3.image}}" alt="Person placing task list card into walnut card holder next to felt carrying case on leather desk pad." class="w-full h-full object-center object-cover">
          </div>
          <h3 class="mt-4 text-base font-semibold text-gray-900">{{pages.index.collections.3.text}}</h3>
          <p class="mt-2 text-sm text-gray-500">{{pages.index.collections.3.lead}}</p>
        </a>
      </div>
    </section>
    {{/if}}
    {{/with}}

    <!-- Featured section -->
    <section aria-labelledby="comfort-heading" class="max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
      <div class="relative rounded-lg overflow-hidden">
        <div class="relative bg-gray-800 py-32 px-6 sm:py-40 sm:px-12 lg:px-16">
          <div class="relative max-w-3xl mx-auto flex flex-col items-center text-center">
            <h2 id="comfort-heading" class="text-3xl font-extrabold tracking-tight text-white sm:text-4xl">We're here to help</h2>
            <p class="mt-3 text-lg text-white">Support that really cares. From the smallest request to the largest last minute order changes, we're here to make sure you get the help you need. Contact us 24/7/365 and we'll be sure to make it right so you can enjoy your corner of the world.</p>
            <div class="mt-8 w-full block bg-white border border-transparent rounded-md py-3 px-8 text-base font-medium text-gray-900 sm:w-auto cursor-default">Contact Support</div>
          </div>
        </div>
      </div>
    </section>
  </main>

  {{> footer }}
</div>

<script>
</script>
