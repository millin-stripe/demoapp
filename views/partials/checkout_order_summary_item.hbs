<img src="{{ price.product.images }}" alt="${product.name}" class="flex-none w-40 h-40 object-center object-cover bg-gray-200 rounded-md">
<div class="flex flex-col justify-between space-y-4">
  <div class="text-sm font-medium space-y-1">
    <h3 class="text-gray-900">{{ price.product.name }}</h3>
    <p class="text-gray-500">{{ formatCurrency 'en-US' price.unit_amount }} x {{ price.product.quantity }}</p>
  </div>
</div>
