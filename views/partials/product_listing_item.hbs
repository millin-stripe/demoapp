<!-- Product item -->
<a href="/products/{{ price.product.id}} " class="group text-sm">
  <div class="w-full aspect-w-1 aspect-h-1 rounded-lg overflow-hidden bg-gray-100 group-hover:opacity-75">
    <img src="{{ price.product.images }}" alt="{{ price.product.name }}" class="w-full h-full object-center object-cover">
  </div>
  <h3 class="mt-4 text-lg text-gray-900">
    {{ price.product.name }}
  </h3>
  <p class="mt-2 font-medium text-gray-900">
    {{ formatCurrency 'en-US' price.unit_amount }}
  </p>
</a>
